{
    "version": 1,
    "disable_existing_loggers": false,
    "formatters": {
        "default": {
            "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
        }
    },
    "handlers": {
        "file": {
            "class": "logging.handlers.RotatingFileHandler",
            "formatter": "default",
            "filename": "logs/uvicorn.log",
            "maxBytes": 10485760,
            "backupCount": 5
        }
    },
    "loggers": {
        "uvicorn": {
            "handlers": ["file"],
            "level": "WARNING",
            "propagate": false
        },
        "uvicorn.access": {
            "handlers": ["file"],
            "level": "WARNING",
            "propagate": false
        },
        "uvicorn.error": {
            "handlers": ["file"],
            "level": "ERROR",
            "propagate": false
        }
    },
    "root": {
        "level": "WARNING",
        "handlers": ["file"]
    }
}