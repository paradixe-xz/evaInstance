# Application Configuration
APP_NAME=WhatsApp AI Backend
APP_HOST=0.0.0.0
APP_PORT=8000
DEBUG=true

# Database Configuration
DATABASE_URL=sqlite:///./whatsapp_ai.db
# For PostgreSQL: postgresql://user:password@localhost/dbname

# WhatsApp Business API
WHATSAPP_ACCESS_TOKEN=tu_access_token_aqui
WHATSAPP_PHONE_NUMBER_ID=tu_phone_number_id_aqui
WHATSAPP_BUSINESS_ACCOUNT_ID=tu_business_account_id_aqui
WHATSAPP_VERIFY_TOKEN=tu_verify_token_aqui
WHATSAPP_WEBHOOK_SECRET=tu_webhook_secret_aqui
WHATSAPP_API_VERSION=v18.0

# Ollama Configuration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3
OLLAMA_TIMEOUT=30

# Chat Configuration
MAX_CONVERSATION_HISTORY=20
DEFAULT_LANGUAGE=es
ENABLE_CONVERSATION_SUMMARY=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE_PATH=logs/app.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# Authentication & Security Configuration
SECRET_KEY=your_secret_key_here_change_in_production_minimum_32_characters
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Storage Configuration (for media files)
STORAGE_PATH=storage/media
MAX_FILE_SIZE=10485760

# Twilio (para llamadas)
TWILIO_ACCOUNT_SID=tu_account_sid
TWILIO_AUTH_TOKEN=tu_auth_token
TWILIO_PHONE_NUMBER=tu_phone_number
TWILIO_WEBHOOK_URL=tu_webhook_url